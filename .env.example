# Happy CLI Environment Variables
#
# Copy this file to .env to customize CLI behavior.
# All variables are optional - sensible defaults are provided.

# ============================================
# Server Configuration
# ============================================

# Type: string (URL)
# Default: https://happy-api.enflamemedia.com
# Format: https://host:port (no trailing slash)
# HAPPY_SERVER_URL=https://happy-api.enflamemedia.com

# Type: string (URL)
# Default: https://happy.enflamemedia.com
# Format: https://host (no trailing slash)
# HAPPY_WEBAPP_URL=https://happy.enflamemedia.com

# ============================================
# Directory Paths
# ============================================

# Type: string (path)
# Default: ~/.enfm-happy
# Note: Supports ~ expansion for home directory
# HAPPY_HOME_DIR=~/.enfm-happy

# Type: string (path)
# Default: current working directory
# Note: Sets root context for session operations
# HAPPY_PROJECT_ROOT=

# ============================================
# Feature Flags
# ============================================

# Type: boolean
# Default: false
# Valid: true, false, 1, 0, yes, no
# HAPPY_EXPERIMENTAL=false

# Type: boolean
# Default: false
# Valid: true, false
# Note: macOS only - prevents caffeinate from keeping system awake
# HAPPY_DISABLE_CAFFEINATE=false

# ============================================
# Performance Tuning
# ============================================

# Type: integer (megabytes)
# Default: 512
# Valid: 128-4096
# Note: Daemon triggers warning when memory exceeds this threshold
# HAPPY_MEMORY_THRESHOLD_MB=

# Type: integer (milliseconds)
# Default: 30000
# Valid: 5000-300000
# HAPPY_MEMORY_CHECK_INTERVAL_MS=

# Type: integer (milliseconds)
# Default: 30000
# Valid: 5000-120000
# HAPPY_SESSION_SPAWN_TIMEOUT=30000

# Type: integer (milliseconds)
# Default: 10000
# Valid: 1000-60000
# HAPPY_DAEMON_HEARTBEAT_INTERVAL=

# Type: integer (milliseconds)
# Default: 5000
# Valid: 1000-30000
# HAPPY_DAEMON_HTTP_TIMEOUT=

# ============================================
# Claude Integration
# ============================================

# Type: string (path)
# Default: ~/.claude
# Note: Supports ~ expansion
# CLAUDE_CONFIG_DIR=~/.claude

# Type: string
# Default: none (auto-detected)
# Note: SDK entrypoint identifier for custom configurations
# CLAUDE_CODE_ENTRYPOINT=

# Type: string (JSON)
# Default: none
# Format: {"server-name": {"command": "...", "args": [...]}}
# CLAUDE_SDK_MCP_SERVERS=

# ============================================
# Codex Integration
# ============================================

# Type: string (path)
# Default: ~/.codex
# Note: Supports ~ expansion
# CODEX_HOME=~/.codex

# Type: string (URL)
# Default: none
# Format: http://host:port/path
# HAPPY_HTTP_MCP_URL=

# ============================================
# Telemetry Configuration
# ============================================

# Type: boolean
# Default: false
# Valid: true, false, 1, 0, yes, no
# Note: Opt-in, privacy-first - telemetry disabled by default
# HAPPY_TELEMETRY=false

# Type: boolean
# Default: true
# Valid: true, false
# Note: When telemetry is enabled, data is anonymized by default
# HAPPY_TELEMETRY_ANONYMIZE=true

# Type: string (URL)
# Default: bundled production DSN
# Format: https://key@org.ingest.sentry.io/project
# Note: Override only for custom Sentry project
# HAPPY_SENTRY_DSN=https://xxxxx@xxx.ingest.sentry.io/xxxxx

# Type: string (URL)
# Default: none
# Format: https://host/path
# HAPPY_TELEMETRY_ENDPOINT=

# ============================================
# Debug Options
# ============================================

# Type: boolean
# Default: false
# Valid: true, false
# Note: Enables verbose logging to stdout
# DEBUG=true

# Type: boolean
# Default: false
# Valid: true, false
# WARNING: Exposes session data - never enable in production
# DANGEROUSLY_LOG_TO_SERVER_FOR_AI_AUTO_DEBUGGING=true

# Type: boolean
# Default: false
# Valid: true, false
# Note: Auto-detected from CI environment
# CI=true

# Type: boolean
# Default: false
# Valid: true, false
# Note: Prevents browser windows from opening
# HEADLESS=true
